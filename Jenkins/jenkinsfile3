pipeline {
    agent {
      label 'slave2'
    }


    stages {
        stage('Go to repo'){
    steps{
        script{
          echo "take code from github"
           sh  '''
              rm -rf sentiment-app/
              git clone $Branch https://github.com/Chirag0401/sentiment-app.git
             '''
             echo "Branch copied"
        }
    }
  }
  stage('Docker Version'){
    steps{
      sh 'docker --version'
    }
    }
   stage('Build Image and push to dockerhub'){
      
    steps{
        script{
          echo "Test code from github"
          sh  ''' 
          echo "encoded password"| docker login --username chirag0401 --password-stdin
          pwd
          ls
          cd sentiment-app/sa-logic/
          docker build -t logic .
          docker tag logic chirag0401/sa-logic:latest-${BUILD_NUMBER}
          docker push chirag0401/sa-logic:latest-${BUILD_NUMBER}
          '''
        }
    }
}
}
}
